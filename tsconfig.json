{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "es2022",
    "module": "nodenext",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@satorijs/element",
    "types": [
      "node"
    ]
  },
  "include": [
    "src"
  ]
}
